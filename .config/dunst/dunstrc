# Например, изменить цвет, размер или поведение уведомлений от определенной программы

# ПРИМЕРЫ ПРАВИЛ (раскомментируйте нужные):

# Задержать все уведомления в полноэкранном режиме (игры, видео)
#[fullscreen_delay_everything]
#    fullscreen = delay

# Всегда показывать критические уведомления, даже в полноэкранном режиме
#[fullscreen_show_critical]
#    msg_urgency = critical
#    fullscreen = show

# Озвучивать все уведомления с помощью espeak (программа синтеза речи)
#[espeak]
#    summary = "*"
#    script = dunst_espeak.sh

# Запускать тестовый скрипт для уведомлений со словом "script" в заголовке
#[script-test]
#    summary = "*script*"
#    script = dunst_test.sh

# Полностью игнорировать уведомления с заголовком "foobar"
#[ignore]
#    summary = "foobar"
#    skip_display = true

# Не сохранять в истории уведомления с заголовком "foobar"
#[history-ignore]
#    summary = "foobar"
#    history_ignore = yes

# Не показывать уведомления с заголовком "foobar", но сохранять в истории
#[skip-display]
#    summary = "foobar"
#    skip_display = yes
